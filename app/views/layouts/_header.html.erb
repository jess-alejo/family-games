      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to game_sessions_path(category: "kids"), class: "nav-link" do %>
            <%= image_tag("kids.png", height: 20, width: 20)%>
            Kids
          <% end %>
        </li>
        <li class="nav-item py-2 py-lg-1 col-12 col-lg-auto">
          <div class="vr d-none d-lg-flex h-100 mx-lg-2 text-white"></div>
          <hr class="d-lg-none my-2 text-white-50">
        </li>
        <li class="nav-item">
          <%= link_to game_sessions_path(category: "teens"), class: "nav-link" do %>
            <%= image_tag("teens.png", height: 20, width: 20)%>
            Teens
          <% end %>
        </li>
        <li class="nav-item py-2 py-lg-1 col-12 col-lg-auto">
          <div class="vr d-none d-lg-flex h-100 mx-lg-2 text-white"></div>
          <hr class="d-lg-none my-2 text-white-50">
        </li>
        <li class="nav-item">
          <%= link_to game_sessions_path(category: "adult"), class: "nav-link" do %>
            <%= image_tag("adult.png", height: 20, width: 20)%>
            Adult
          <% end %>
        </li>
      </ul>
      <ul class="navbar-nav ms-md-auto">
        <li class="nav-item dropdown" data-bs-theme="light">
          <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="theme-menu" aria-expanded="false" data-bs-toggle="dropdown" data-bs-display="static" aria-label="Toggle theme">
