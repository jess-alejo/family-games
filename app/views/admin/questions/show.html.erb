<div class="row">
  <div class="col-2"></div>
  <div class="col-md-8">
    <h1 class="mb-4"><%= @question.content %></h1>

    <div class="card my-3">
      <figure class="bg-white text-center">
        <%= image_tag("question.svg", height: 400, class: "object-fit-contain p-4") %>
      </figure>
      <div class="card-body p-4">
        <div class="row">
          <% JSON.parse(@question.choices).each_with_index do |choice, index| %>
            <div class="col-md-6">
              <%= radio_button_tag :answer, choice, false, id: "choice_#{choice.parameterize.underscore}", class: "btn-check" %>
              <%= label_tag "choice_#{choice.parameterize.underscore}", "#{%w[A C B D][index]}. #{choice}", class: "btn btn-lg btn-#{selected_answer_theme(choice, @question.correct_answer, @question.correct_answer)} mb-4 w-100" %>
            </div>
          <% end %>
        </div>
        <div class="d-block text-center">
          <%= link_to "Back to List", admin_questions_path, class: "btn btn-primary btn-lg mt-4 px-5 mx-auto me-1" %>
          <%= link_to "Edit Question", edit_admin_question_path(@question), class: "btn btn-primary btn-lg mt-4 px-5 mx-auto" %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-2"></div>
</div>
